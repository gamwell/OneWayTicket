{
  "name": "app-billetterie-ia",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Application de billetterie événementielle avec IA, Next.js 15, Prisma et Supabase",
  "author": "Votre Nom",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rimraf .next node_modules/.cache",
    "reinstall": "rimraf node_modules package-lock.json && npm install",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "prisma:pull": "prisma db pull",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:reset": "prisma migrate reset",
    "db:setup": "npm run prisma:generate && npm run prisma:push",
    "db:seed": "npm run prisma:seed",
    "db:reset": "npm run prisma:reset && npm run prisma:seed",
    "verify": "npm run lint && npm run type-check && npm run build",
    "postinstall": "prisma generate",
    "prepare": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.10.0",
    "@stripe/stripe-js": "^2.4.0",
    "@supabase/supabase-js": "^2.39.3",
    "jspdf": "^3.0.3",
    "next": "^15.5.6",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "resend": "^3.0.0",
    "stripe": "^14.11.0",
    "swr": "^2.2.5",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^20",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "dotenv": "^16.4.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.0",
    "prisma": "^6.10.0",
    "rimraf": "^5.0.10",
    "tailwindcss": "^4.1.16",
    "tsx": "^4.20.0",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "billetterie",
    "événements",
    "tickets",
    "nextjs",
    "prisma",
    "supabase",
    "stripe",
    "qrcode",
    "ia"
  ]
}
